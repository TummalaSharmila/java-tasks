package mycaptain;

import java.util.Scanner;
public class SwitchCase {
     
    public static void main(String[] args){
        int order;
        System.out.println("1.pizza\t2.burger\t3.french fries\t4.softdrinks\t");
        Scanner s=new Scanner(System.in);
        order=s.nextInt();
        switch(order){
            case 1 :System.out.println("your order is pizza");
                break;
                case 2 :System.out.println("your order is burger");
                    break;
                    case 3 :System.out.println("your order is french fries");
                        break;
                        case 4 :System.out.println("your order is softdrinks");
                            break;
                        default:System.out.println("sorry!we are not serving with your order at present!");
        }
            
        
        
    }
    
    
}
